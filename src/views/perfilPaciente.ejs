    <header>
        <div id="headerBosch" onclick="headerBosch()">
            <div id="escritaHeader">
                <h3>BOSCH</h3>
            </div>
        </div>
        <div class="title">
            <div class="header">
                <div class="imagem">
                </div>

                <div class="nome">
                    <a href="/PaginaInicialPaciente">Seja bem vindo(a), <b>
                            <%= nome %>
